{
  "name": "Looty!",
  "version": "0.1.1",
  "manifest_version": 2,

  "description": "Looty! A tool for Path of Exile that makes inventory searching fun!",

  "app": {
    "launch": {
      "local_path": "looty.html#/home",
      "container": "tab"
    }
  },

  "icons" : {
      "16" : "images/coin16.png",
      "128" : "images/coin128.png"
    },



  "content_security_policy": "object-src 'self'; script-src 'self' https://ssl.google-analytics.com",

  "permissions": ["http://www.pathofexile.com/*","http://webcdn.pathofexile.com/*", "clipboardWrite", "clipboardRead", "storage", "unlimitedStorage"]
}
